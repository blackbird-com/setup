#!/bin/bash

function bb_rbin_head() {
clear
echo "
 ================================================
  BLACKBIRD | $1
 ------------------------------------------------
  kernel    :  Linux $(uname -r)
  shell     :  $(ps ax | grep $$ | grep -v grep | awk '{ print $2 }')
  protocol  :  A-00-00000
  codename  :  peregrine falcon
  distrib   :  internal
 ------------------------------------------------
  copyright @ 2024 Lektor Media Utama
 ------------------------------------------------
"
}


function bb_stat() {
    echo " 
     |
     +--> $1
     |
    "
    sleep 1
}
